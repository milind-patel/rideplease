<section id="contact">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  <div class="container" style="padding-top:20px;">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>Ride Please!</h2>
            <hr class="star-primary">
        </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
				<%= simple_form_for("search",url: "result_home_index_path",method: :post) do |f| %>
					<div class="form-group">
						<%= f.input :start_point,input_html: { class: "form-control",
							id: "gmaps-input-address"},placeholder: "Start Location",required: true %>
					</div>
					<div class="form-group">
						<%= f.text_field "end_point",class: "form-control",placeholder: "Destination Location",required: true %>
					</div>
					<div class="form-group">
          	<%= f.submit "Search Please!" ,class: "btn btn-success btn-lg" %>
          </div>
				<% end %>
			</div>
		</div>
	</div>
	<div id='gmaps-canvas' style="display:none;"></div>
</section>


